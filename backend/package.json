{
  "name": "formation-backend",
  "version": "1.0.0",
  "description": "Formation by PikeSquare - Revenue intelligence platform backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node --project tsconfig.nodemon.json src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "db:init": "node dist/scripts/initDatabase.js",
    "db:init:force": "node dist/scripts/initDatabase.js --force",
    "db:init:dev": "ts-node --project tsconfig.nodemon.json src/scripts/initDatabase.ts",
    "db:init:dev:force": "ts-node --project tsconfig.nodemon.json src/scripts/initDatabase.ts --force",
    "db:migrate:customer-fields": "node dist/scripts/migrate-customer-fields.js",
    "inspect-fields": "ts-node --project tsconfig.nodemon.json src/scripts/inspect-account-fields.ts",
    "inspect-all-fields": "ts-node --project tsconfig.nodemon.json src/scripts/inspect-all-fields.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "salesforce",
    "revenue-intelligence",
    "crm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.70.1",
    "@google/generative-ai": "^0.24.1",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.10.5",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "jsforce": "^2.0.0-beta.29",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "openai": "^6.9.1",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2"
  }
}
